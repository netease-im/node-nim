{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "target": "es6",
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom"
        ],
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "stripInternal": true
    },
    "typedocOptions": {
        "entryPoints": [
            "ts/node-nim.ts",
            "ts/chatroom",
            "ts/chatroom_def",
            "ts/nim",
            "ts/nim_def",
            "ts/qchat",
            "ts/qchat_def"
        ],
        "entryPointStrategy": "expand",
        "readme": "none",
        "out": "doc",
        "sort": "source-order",
        "excludeProtected": "true",
        "hideGenerator": "true",
        "excludeInternal": "true"
    },
    "include": [
        "ts/**/*"
    ]
}