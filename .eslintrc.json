{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-tabs": "off",
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "new-cap": "off",
        "camelcase": "off",
        "@typescript-eslint/no-empty-function": "off"
    }
}